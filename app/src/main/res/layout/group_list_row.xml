<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"          
            android:layout_weight="1" >

            <TextView
                android:id="@+id/group_list_row_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Group name "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="30sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="center"
            android:text="â‚¬"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"          
            android:textSize="30sp" />

        <TextView
            android:id="@+id/group_list_row_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="center"
            android:text="0.00"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"          
            android:textSize="30sp" />

        <Button
            android:id="@+id/group_list_row_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:background="@mipmap/ic_edit"/>

        <Button
            android:id="@+id/group_list_row_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:background="@mipmap/ic_delete"/>

</LinearLayout>